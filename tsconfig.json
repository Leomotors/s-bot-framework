{
  "compilerOptions": {
    "target": "es2021",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDirs": [
      "./src"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ]
}